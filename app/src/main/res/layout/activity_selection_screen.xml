<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/bread"/>

        <Button
            android:id="@+id/btn_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:text="머리부터 먹기"
            android:textSize="20dp"
            android:textColor="#000000"
            app:backgroundTint="#9A5C5757" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:text="꼬리부터 먹기"
            android:textSize="20dp"
            android:textColor="#000000"
            app:backgroundTint="#9A5C5757" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:text="배부터 먹기"
            android:textSize="20dp"
            android:textColor="#000000"
            app:backgroundTint="#9A5C5757" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:text="통째로 한 입 먹기"
            android:textSize="20dp"
            android:textColor="#000000"
            app:backgroundTint="#9A5C5757" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:text="팥만 먹기"
            android:textSize="20dp"
            android:textColor="#000000"
            app:backgroundTint="#9A5C5757" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:text="빵만 먹기"
            android:textSize="20dp"
            android:textColor="#000000"
            app:backgroundTint="#9A5C5757" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:text="반으로 나눠 꼬리부터 먹기"
            android:textSize="20dp"
            android:textColor="#000000"
            app:backgroundTint="#9A5C5757" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:text="반으로 나눠 머리부터 먹기"
            android:textSize="20dp"
            android:textColor="#000000"
            app:backgroundTint="#9A5C5757" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:text="등지느러미부터 먹기"
            android:textSize="20dp"
            android:textColor="#000000"
            app:backgroundTint="#9A5C5757" />

    </LinearLayout>

</ScrollView>