<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--    붕어빵 사진-->
    <ImageView
        android:layout_width="144dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@drawable/bread_tail_first" />

    <!-- 반으로 나눠 꼬리부터 먹는 당신 타이틀-->
    <Button
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_margin="1dp"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:text="반으로 나눠 꼬리부터 먹는 당신!"
        android:textColor="#000000"
        android:textSize="22dp"
        app:backgroundTint="#9A5C5757" />

    <EditText
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:layout_margin="17dp"
        android:background="@drawable/board"
        android:text="눈치가 빠르고 자신을 챙기는 성격\n\n\n꼼꼼하고 두뇌회전이 빨라 자기 이익을 잘 챙기네요!
또한 눈치도 빨라서 사랑을 많이 받는 편이에요!"
        android:textSize="30dp"/>

</LinearLayout>